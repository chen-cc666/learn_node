extends layout

block content
    h1  #{title}
    form.form-inline(method='POST' action='')
        div.form-group.mx-sm-3.mb-2
            label(for='name')   钟类:
            input#name.form-control(type='text',placeholder='Fantasy,' +
            'Poetry etc.' name='name' value=(undefined===genre ? "":genre.name))

        button.btn.btn-primary.mb-2(type='submit')   按钮

        if errors
            ul
                for error in errors
                    li != error.msg