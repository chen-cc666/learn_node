extends layout

block content

    h1  Author: #{author.name}
    p   #{author.lifespan}

    div(style='margin-left:20px;margin-top:20px;color:hotpink')

        h4  Books

        dl
            each book in author_books
                dt
                    a(href=book.url)    #{book.title}
                dd  #{book.summary}

            else
                p   这个作者没有书籍~

        hr
        p
            a(href=author.url+'/delete')    删除作者